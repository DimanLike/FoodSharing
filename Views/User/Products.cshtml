@model List<ProductsViewModel>
@{
	ViewData["Title"] = "Home Page";
}
<style>
	body {
		width: 100%;
		height: 100%;
		padding: 0;
		margin: 0;
		background: #f7f7ff;
	}

	.card-body {
		min-height: 1px;
	}

	ul.row {
		list-style: none;
		padding: 0;
		margin-bottom: 0;
	}

	.card {
		position: relative;
		display: flex;
		flex-direction: column;
		min-width: 0;
		word-wrap: break-word;
		background-color: #fff;
		background-clip: border-box;
		border: 0 solid transparent;
		border-radius: .25rem;
		margin-bottom: 1.5rem;
		box-shadow: 0 2px 6px 0 rgb(218 218 253 / 65%), 0 2px 6px 0 rgb(206 206 238 / 54%);
	}
</style>
<div class="container">
	<div class="main-body">
		<div class="row justify-content-center">
			<div class="col-lg-6   ">
				@if (TempData["UploadPhotoError"] != null)
				{
					<div class="row">
						<div class="col-sm-12">
							<div class=" mb-3 alert alert-warning alert-dismissible fade show" role="alert">
								<strong>О нет!</strong> @TempData["UploadPhotoError"]
								<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
							</div>
						</div>
					</div>
				}
				@if (Model is null)
				{
					<button class="btn btn-outline-primary my-2 my-sm-0" onclick="location.href='@Url.Action("GetInventoryProduct", "User")'">View products</button>
				}
				else
				{
					@foreach(var productView in Model)
					{
					<div class="card">
						<div class="card-body">
							<form method="post" asp-controller="Products" asp-action="AddProduct" enctype="multipart/form-data">
								<div class="row mb-4">
									@if (productView.Image != null)
									{
										<img src="data:image/jpeg;base64,@(Convert.ToBase64String(productView.Image))" class="img-fluid"/>
									}
									else
									{ 
										<img src="https://e7.pngegg.com/pngimages/83/693/png-clipart-united-states-color-blank-map-white-united-states-angle-white.png" class="img-fluid rounded"/>
									}	
								</div>
								<div class="row mb-4">
									<label class="col-sm-3 col-form-label">Название</label>
									<div class="col-sm-9">
										<input readonly  type="text" class="form-control" value="@productView.Name">	
									</div>
								</div>
								<div class="row mb-4">
									<label class="col-sm-3 col-form-label"> Количество</label>
									<div class="col-sm-9">
										<input readonly  type="text" class="form-control" value="@productView.Quantity"  >
									</div>
								</div>
								<div class="row mb-4">
									<label class="col-sm-3 col-form-label"> Описание</label>
									<div class="col-sm-9">
										<textarea readonly  class="form-control" value="@productView.Description">
									</textarea>
									</div>
								</div>
								<div class="row mb-4">
									<label class="col-sm-3 col-form-label"> Категория</label>
									<div class="col-sm-9">
										<input type="text" readonly  class="form-control" value="@productView.Category">
									</div>
								</div>
							</form>
						</div>
						<div class="card-footer text-muted"> @productView.CreatedAt </div>
					</div>	
					}
				}
			</div>
		</div>
	</div>
</div>
