            <div class="col-lg-8">
            <form method="post" asp-action="EditProfile">
                <div class="card">
                    <div class="card-body">

                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <label asp-for="Email" class="mb-0 h6"></label>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <input asp-for="Email" type="text" class="form-control">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <label asp-for="FirstName" class="mb-0 h6"></label>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <input asp-for="FirstName" type="text" class="form-control">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <label asp-for="LastName" class="mb-0 h6"></label>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <input asp-for="LastName" type="text" class="form-control">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <label asp-for="Phone" class="mb-0 h6"></label>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <input asp-for="Phone" type="text" class="form-control">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <label asp-for="Adress" class="mb-0 h6"></label>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <input asp-for="Adress" type="text" class="form-control">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <label class="mb-0 h6">Фото</label>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <input class="form-control" type="file" >
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-3">
                            </div>
                            <div class="col-sm-2 text-secondary">
                                <button class="btn btn-primary">Save</button>
                                
                            </div>
                            <div class="col-sm-2 text-secondary">
                                <button asp-action="SavePhoto" class="btn btn-primary">Photo</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="d-flex align-items-center mb-3">Products</h5>
                            </div>
                        </div>
                    </div>
                </div>
